<!-- Validation failure messages -->
<% if @comment.errors.any? %>
<% @comment.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Add Comment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <input type="text" id="body" name="body" placeholder="Body" class="form-control" value="<%= @comment.body %>">
      </div>

      <div class="form-group">

        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%=current_user.id %>">
      </div>
      
      <!-- Label and input for user_id -->
      <!-- <div class="form-group">
      <label for="user_id" class="control-label">
      User
    </label>

    <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @comment.user_id %>">
  </div> -->

  <!-- Label and input for copay_id -->
  <div class="form-group">
    <label for="copay_id" class="control-label">
      Copay
    </label>

    <input type="text" id="copay_id" name="copay_id" placeholder="Copay" class="form-control" value="<%= @comment.copay_id %>">
  </div>

  <button class="btn btn-success">
    Create Comment
  </button>
  or
  <a href="/comments">Cancel</a>
</form>
</div>
</div>
