<!-- Validation failure messages -->
<% if @request.errors.any? %>
<% @request.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Add Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for drug -->
      <div class="form-group">
        <label for="drug" class="control-label">
          Drug
        </label>

        <input type="text" id="drug" name="drug" placeholder="Drug" class="form-control" value="<%= @request.drug %>">
      </div>


      <div class="form-group">

        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%=current_user.id %>">
      </div>
      <!-- Label and input for user_id -->
      <!-- <div class="form-group">
      <label for="user_id" class="control-label">
      User
    </label>

    <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @request.user_id %>">
  </div> -->

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="control-label">
      Notes
    </label>

    <input type="text" id="notes" name="notes" placeholder="Notes" class="form-control" value="<%= @request.notes %>">
  </div>

  <button class="btn btn-success">
    Create Request
  </button>
  or
  <a href="/requests">Cancel</a>
</form>
</div>
</div>
