<div class="page-header">
  <h1>
    Copays
    <a href="/copays/new" class="btn btn-lg btn-success">New Copay</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Pay as little as</th>
        <th>Max saving</th>
        <th>Cap</th>
        <th>Url</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @copays.each do |copay| %>
      <tr>
        <td><%= copay.name %></td>
        <td><%= copay.pay_as_little_as %></td>
        <td><%= copay.max_saving %></td>
        <td><%= copay.cap %></td>
        <td><%= copay.url %></td>
        <td><%= copay.user_id %></td>
        <td>
          <a href="/copays/<%= copay.id %>" class="btn btn-primary">Show</a>
          <a href="/copays/<%= copay.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_copay/<%= copay.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
